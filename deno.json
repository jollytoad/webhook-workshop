{
  "unstable": [
    "kv"
  ],
  "tasks": {
    "gen": "./scripts/gen.ts",
    "start": "./scripts/dev.ts",
    "deploy": "deno run --allow-sys --allow-net --allow-read --allow-write --allow-env jsr:@deno/deployctl deploy",
    "check": "deno check **/*.ts **/*.tsx",
    "ok": "deno fmt && deno lint && deno task check",
    "lock": "rm -f deno.lock && deno check app/main.ts scripts/*.ts",
    "token": "deno run scripts/token.ts"
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "@http/jsx-stream",
    "verbatimModuleSyntax": true,
    "noUncheckedIndexedAccess": true
  },
  "fmt": {
    "exclude": [
      "app/routes.ts",
      "app/hooks.json"
    ]
  },
  "imports": {
    "@http/discovery": "jsr:@http/discovery@^0.26.0",
    "@http/generate": "jsr:@http/generate@^0.26.1",
    "@http/host-deno-deploy": "jsr:@http/host-deno-deploy@^0.26.0",
    "@http/host-deno-local": "jsr:@http/host-deno-local@^0.26.0",
    "@http/html-stream": "jsr:@http/html-stream@^0.8.0",
    "@http/interceptor": "jsr:@http/interceptor@^0.26.0",
    "@http/jsx-stream": "jsr:@http/jsx-stream@^0.8.1",
    "@http/request": "jsr:@http/request@^0.26.0",
    "@http/response": "jsr:@http/response@^0.26.0",
    "@http/route": "jsr:@http/route@^0.26.0",
    "@std/async": "jsr:@std/async@^1.0.14",
    "@std/encoding": "jsr:@std/encoding@^1.0.10",
    "gitlab-event-types": "npm:gitlab-event-types@^3.0.1",
    "openai": "npm:openai@^5.19.1"
  },
  "deploy": {
    "project": "webhook-workshop",
    "exclude": [],
    "include": [],
    "entrypoint": "app/main.ts"
  }
}
